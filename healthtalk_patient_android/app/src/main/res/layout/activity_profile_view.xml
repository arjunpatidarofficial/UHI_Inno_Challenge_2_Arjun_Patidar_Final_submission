<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Auth.UpdateProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            android:layout_height="match_parent"
            tools:context=".Auth.UpdateProfileActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|enterAlways"
                android:layout_height="60dp">


                <ImageView
                    android:layout_width="16dp"
                    android:id="@+id/close"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Profile Details"
                    android:id="@+id/txtHeader"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textSize="17dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:fontFamily="@font/kollek"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Edit Profile"
                    android:layout_centerInParent="true"
                    android:textSize="17dp"
                    android:id="@+id/edit"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/kollek"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/kollek"
                    android:text="Name" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:text="Not Update"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#F4F4F4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/kollek"
                    android:text="Email Address" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:hint="Email not available"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#F4F4F4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/kollek"
                    android:text="Gender" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:hint="Gender not available"
                    android:textColor="@android:color/black"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#F4F4F4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/kollek"
                    android:text="Age" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:hint="Age not available"
                    android:textColor="@android:color/black"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#F4F4F4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/kollek"
                    android:text="Height" />

                <TextView
                    android:id="@+id/height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:hint="Height not available"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textColorHint="#9E9E9E"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#F4F4F4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/kollek"
                    android:text="Weight" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:hint="Weight not available"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#F4F4F4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/kollek"
                    android:text="Address" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:hint="Address not available"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#F4F4F4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/kollek"
                    android:text="Aadhar Number" />

                <TextView
                    android:id="@+id/aadhar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:hint="Aadhar number not available"
                    android:textColor="@android:color/black"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

</ScrollView>