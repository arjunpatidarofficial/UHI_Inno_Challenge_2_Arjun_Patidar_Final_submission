<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:src="@color/green"
                android:id="@+id/img"
                android:layout_gravity="center"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                 android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kollek"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:id="@+id/name"
                    android:textColor="@color/black"
                    android:text="Dr. Arjun Patidar"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kollek"
                    android:textSize="14dp"
                    android:id="@+id/number"
                    android:textColor="@color/black"
                    android:text="Cardiologist"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kollek"
                android:textSize="12dp"
                android:id="@+id/date"
                android:paddingHorizontal="7dp"
                android:paddingVertical="3dp"
                android:background="@drawable/btngreen"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Date"/>

            <TextView
                android:id="@+id/slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/kollek"
                android:text="Time slot"
                android:background="@drawable/btn"
                android:paddingHorizontal="7dp"
                android:paddingVertical="3dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />



        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kollek"
            android:textSize="14dp"
            android:paddingVertical="3dp"
            android:paddingHorizontal="5dp"
            android:id="@+id/type"
            android:layout_marginBottom="7dp"
            android:background="@drawable/btngreen"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:textColor="@color/white"
            android:text="type"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kollek"
            android:textSize="14dp"
            android:paddingVertical="3dp"
            android:paddingHorizontal="5dp"
            android:id="@+id/status"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/btnyellow"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:textColor="@color/white"
            android:text="Status"/>

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kollek"
            android:visibility="gone"
            android:textSize="14dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="8dp"
            android:id="@+id/prescription"
            android:layout_marginBottom="7dp"
            android:background="@drawable/ring_layout"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            android:text="View Prescription"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>