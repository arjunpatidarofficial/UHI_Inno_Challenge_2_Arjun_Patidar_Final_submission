<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppoinmentSubActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:forceDarkAllowed="false"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/background"
            android:orientation="vertical"
            android:forceDarkAllowed="false"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:id="@+id/appBarLayout"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:forceDarkAllowed="false"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:id="@+id/close"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Appointment Information"
                        android:id="@+id/txtHeader"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textSize="15dp"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:fontFamily="@font/kollek"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:forceDarkAllowed="false"
                android:background="@color/background"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:forceDarkAllowed="false"
                    android:fontFamily="@font/kollek"
                    android:text="Name" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:forceDarkAllowed="false"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:forceDarkAllowed="false"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:forceDarkAllowed="false"
                    android:fontFamily="@font/kollek"
                    android:text="Number" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"
                    android:forceDarkAllowed="false"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/kollek"
                    android:text="Date" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="7dp"
                    android:fontFamily="@font/kollek"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/kollek"
                    android:text="Time Slot" />

                <TextView
                    android:id="@+id/slot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="5dp"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:background="@drawable/btngreen"
                    android:textColor="@android:color/white"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/kollek"
                    android:text="Appointment type" />

                <TextView
                    android:id="@+id/appointType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="7dp"
                    android:background="@drawable/btnyellow"
                    android:textColor="@color/white"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/kollek"
                    android:text="Amount" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="7dp"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:background="@drawable/btngreen"
                    android:textColor="@color/white"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/kollek"
                    android:text="Payable Amount" />

                <TextView
                    android:id="@+id/payableAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="7dp"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:text="â‚¹250"
                    android:background="@drawable/btngreen"
                    android:textColor="@color/white"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16dp"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/kollek"
                    android:text="Payment" />

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"
                    android:text="Online"
                    android:fontFamily="@font/kollek"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textColorHint="#9E9E9E"
                    android:textSize="14dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/btnOnline"
                    android:background="@drawable/btngreen"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:text="Pay Online"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/kollek"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>